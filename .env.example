# Configuration Environment Variables
# Copy this file to .env and fill in the values

# Application Configuration
VITE_APP_ID=your_app_id
VITE_APP_TITLE=Staff Seekers - Eletricista Profissional

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_here_change_this
OWNER_OPEN_ID=your_open_id_here

# Database (if applicable)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# OAuth & API Configuration
OAUTH_SERVER_URL=https://oauth.example.com
BUILT_IN_FORGE_API_URL=https://api.forge.example.com
BUILT_IN_FORGE_API_KEY=your_forge_api_key_here
VITE_FRONTEND_FORGE_API_KEY=your_frontend_forge_api_key_here
VITE_FRONTEND_FORGE_API_URL=https://api.forge.example.com
VITE_OAUTH_PORTAL_URL=https://oauth.example.com/portal

# Analytics & Tracking
VITE_ANALYTICS_ENDPOINT=https://analytics.example.com
VITE_ANALYTICS_WEBSITE_ID=your_website_id_here

# Email Marketing (Mailchimp)
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_AUDIENCE_ID=your_mailchimp_audience_id_here

# Site Configuration (overrides shared/siteConfig.ts)
VITE_SITE_ID=staff-seekers
VITE_SITE_DOMAIN=staff-seekers.com
VITE_SITE_PHONE=+351XXXXXXXXX
VITE_SITE_WHATSAPP=+351XXXXXXXXX
VITE_SITE_EMAIL=contact@staff-seekers.com

# Development Flags
VITE_DEV_MODE=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_ANALYTICS=true

# Build Configuration
VITE_BUILD_TARGET=web
VITE_BUILD_SOURCEMAP=false